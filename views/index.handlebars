<h1>Dranks!</h1>

<h2>Drink Me!</h2>

<ul>
  {{#each drinks}}
    {{#unless sipped}}
      {{> drinks/drink-block sipped=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Sipped on Drinks</h2>

<ul>
  {{#each drinks}}
    {{#if sipped}}
      {{> drinks/drink-block sipped=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Drink</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Drink Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Thirsty?</label><br>
    <input type="radio" name="sipped" value="1" checked> Sipped!<br>
    <input type="radio" name="sipped" value="0"> Dry
  </div>

  <button type="submit">Add Drink</button>
</form>
